{
    "$schema": "http://json-schema.org/schema",
    "type": "object",
    "properties": {
        "accounts": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "server": {
                        "type": "string"
                    },
                    "apiKey": {
                        "type": "string"
                    },
                    "insecure": {
                        "type": "boolean"
                    }
                },
                "required": ["server", "apiKey"]
            }
        },
        "currentAccount": {
            "type": "string"
        }
    },
    "required": ["accounts"]
}
